    <title>Guess The Number Game</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
        }
        #welcomeContainer {
            display: block;
        }
        #gameContainer {
            display: none;
        }
        #spinnerContainer {
            position: relative;
            width: 200px;
            height: 200px;
            margin: 20px auto;
        }
        #spinner {
            position: absolute;
            width: 100%;
            height: 100%;
            border: 2px solid black;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 40px;
            font-weight: bold;
            transition: transform 1.5s linear;
        }
        #result {
            font-size: 24px;
            margin-top: 20px;
        }
        #playAgain {
            display: none;
            margin-top: 20px;
        }
        #instructions {
            border: 1px solid black;
            padding: 10px;
            margin: 20px auto;
            width: 600px;
            background-color: #f9f9f9;
        }
        .continue-button {
            font-size: 18px;
            padding: 10px 20px;
            cursor: pointer;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            margin-top: 20px;
        }
